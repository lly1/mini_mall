/* pages/order/order.wxss */
@import "/template/code/code.wxss"; /*引入template样式*/
/* 解决和店铺取货吗样式不一 */
.category .s-b {
  height: 32%;
}
.default{
  text-align: center;
  font-weight: 500;
  color: grey;
}
.swiper{
  height: 93%;
}
.header{
  display: flex;
  justify-content: space-around;
  height: 7%;
}
.header .title{
  height: 70rpx;
  width: 180rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
}
.header .title.selected{
  border-bottom: 7rpx solid #33CC33;
  font-weight: 600;
}
.container{
  height: 100%;
  background-color: #fff;
  overflow-x: hidden;
}
.orderList{
  background-color: #fff;
}
.content{
  width: 80%;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.next {
  width: 40rpx;
  height: 40rpx;
}
.order-content-restaurantImg{
  width: 100rpx;
  height: 80rpx;
}
.order-title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ECECEC;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-title-restaurantName{
  height: 100%;
  font-size: 32rpx;
  color: black;
  font-weight: 800;
}
.order-title-state{
  width: 180rpx;
  color: grey;
  margin-right: 20rpx;
  font-size: 28rpx;
  text-align: center;
  height: 35rpx;
  line-height: 35rpx;
}
.order-content{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ECECEC;
  padding: 20rpx 0 40rpx 97rpx;
}


.order-content-info{
  font-size: 25rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: grey;
}
.order-content-info-content{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.order-content-info-name{
  width: 100%;
}
.order-content-info-date{
  margin-right: 20rpx;
}
.order-content-info-distribute{
  text-align: right;
  display: flex;
  align-items: center;
  
}
.order-content-info-price{
  color: black;
  font-weight: 800;
  margin-right: 20rpx;
}
.order-content-info-title{
  flex: 1;
}
.pay{
  height: 70rpx;
  width: 200rpx;
  text-align: center;
  line-height: 70rpx;
  color: white;
  font-size: 30rpx;
  background: #33CC33;
  margin-right: 20rpx;
}
.order-footer{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  align-items: center;
}
.order-footer-goToComment,.order-footer-orderAgain{
  margin-right: 20rpx; 
  height: 70rpx;
  line-height: 70rpx;
  width: 200rpx;
  text-align: center;
  border: 1rpx solid #ECECEC;
}
.order-footer-orderAgain{
  margin-right: 20rpx;
}
.order-footer-goToComment{
  background: #33CC33;
  color: #fff;
}
/* 滑动删除 */
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #ECECEC;
  width: 100%;
  overflow: hidden;
 }
 .del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
 }
 .touch-move-active .items,
 .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
 }
 .items {
  width: 95%;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -75px;
  color:#333;
 }