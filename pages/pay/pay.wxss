/* pages/order/order.wxss */
.container{
  height: 100%;
  background-color: #f5f5f5;
  overflow-x: hidden;
}
.orderList{
  width: 96%;
  margin: 2%;
  border: 2rpx 0;
  border-radius: 20rpx;
  background-color: #fff;
}
.order-title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ECECEC;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-title-restaurantName{
  width: 200rpx;
  height: 100%;
  font-size: 30rpx;
  color: gray;
  margin-left: 20rpx;
}
.order-title-state{
  width: 130rpx;
  color: #fff;
  margin-right: 20rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: #33cc33;
  height: 35rpx;
  line-height: 35rpx;
  border-radius: 20rpx 5rpx;

}
.order-content{
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ECECEC; 
}
.order-content-info-name{
  font-size: 30rpx;
  margin-left: 10rpx;
}
.order-content-restaurantImg{
  width: 200rpx;
  height: 125rpx;
}
.order-content-info{
  height: 125rpx;
  font-size: 25rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.order-content-info-price{
  color: red;
  font-size: 30rpx;
  margin-top: 10rpx;
}
.order-content-info-date{
  margin: 8rpx;
}
.order-footer{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 25rpx;
  align-items: center;
}
.order-footer-totalPrice{
  display: flex;
  font-size: 30rpx;
}
.price{
  color: red;
  font-size: 42rpx;
  margin-bottom: 5rpx;
  margin-right: 20rpx;
}
.order-title-payway{
  font-size: 30rpx;
  margin-right: 25rpx;
}
.order-title-name{
  width: 200rpx;
  height: 100%;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.section{
  background: #fff;
  border-radius: 20rpx;
}
.xian{
  width: 90%;
  background: #ECECEC;
  height: 3rpx;
  margin-left:25rpx; 
}
.jieshang{
  margin-left:30rpx; 
  padding: 20rpx 0;
  font-size: 30rpx;

}
textarea{
  width: 100%;
  padding: 32rpx;
  height: 130rpx;
}

.footer{
  display: flex;
  position: absolute;
  right: 0;
  left: 0;
  bottom:0;
  height: 100rpx;
  align-items: center;
  background-color: #fff;
}
.footer .howMuch{
  position: relative;
  flex: 1;
  font-size: 28rpx;
  background: white;
  line-height: 100rpx;
  padding-left: 20rpx;
  display: flex;
}
.footer .pay{
  height: 70rpx;
  width: 200rpx;
  text-align: center;
  line-height: 70rpx;
  color: white;
  font-size: 30rpx;
  background: #33CC33;
  margin-right: 20rpx;
}
.footer .cost{
  color: red;
  font-size: 42rpx;
  width: 100rpx;
}
.total{
  font-size: 30rpx;
}