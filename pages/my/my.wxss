page{
  height:100%;
  font-size: 32rpx;
  background: #ECECEC;
  font-family: "微软雅黑";
}
.header{
  height: 300rpx;
  background: #33CC33;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.header .userImg{
  width: 120rpx;
  height: 120rpx;
  border-radius:120rpx;
  border: 8rpx solid #33CC33; 
  margin-bottom: 30rpx;
}

.content .coupon,.content .signOut,
.content .address,.content .tel{
  background: white;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 15rpx; 
}
.content .coupon,.content .signOut{ 
  margin: 15rpx 0;
}
.address{
	border-bottom: 1rpx solid #E0E0E0;
}
.content .signOut{
  text-align: center;
}
::-webkit-scrollbar {	
  width: 0;
  height: 0;
  color: transparent;
}
.loginBtn{
  margin-left:8rpx;
  margin-top:40rpx;
  margin-bottom:16rpx;
  color:#FFFFFF;
}
  button[plain] {
  border: 0;
}
.profile{
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  background-color: #33CC33;
} 

.icon-num {
  font-size: 32rpx;
  min-width: 35rpx;
  padding: 0 5rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #33CC33;
  border-radius: 40rpx;
  top: -16rpx;
  right: -24rpx;
  text-align: center;
  color: #fff;
  margin-left: 450rpx;
}

/* flex重新构建菜单 */
.menu-item {
  height: 104rpx;
  padding: 0 32rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.menu-item .l {
  font-size:34rpx;
  color:#333;
  line-height:104rpx;
}
.menu-item .next {
  width: 40rpx;
  height: 40rpx;
}
.space {
  width: 100vw;
  height: 3rpx;
  background: #E0E0E0;
}