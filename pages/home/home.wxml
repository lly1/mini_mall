<scroll-view bindscrolltolower="lower" class="scroll-shop-list" scroll-y="true" style="height:100%">
  <view class="heard">
    <navigator url="/pages/map/map">
      <view class="heard-location">
        <image src="/images/location.png" 
        class="heard-location-icon"/>
        <text class="heard-location-text">{{location}}</text>
      </view>
    </navigator>
    <view class="heard-search">
      <image src="/images/search.png" class="heard-search-icon"/>
      鸡排
    </view>
  </view>
  <swiper indicator-dots="true" indicator-color="rgba(228,228,228,1)" indicator-active-color="#FECA49" autoplay="{{true}}">
    <swiper-item>
        <image src="/images/icon/show1.jpg" mode="aspectFill" class="showImg"/>
    </swiper-item>
    <swiper-item>
        <image src="/images/icon/show2.jfif" mode="aspectFill" class="showImg"/>
    </swiper-item>
  </swiper>
  <view class="header-title">附近商家</view>
  <template is="sort_list" data="{{selected}}"/>
    <view class="shopList">
    <block wx:for="{{shopList}}" wx:key="">
      <navigator url="/pages/menu/menu">
        <view class="shop-list">
          <view class="shop-info-image">
            <image src="{{basePath}}{{item.shopLogo}}" class="shop-image"/>
          </view>
          <view class="shop-info">
            <view class="shop-info-name">{{item.shopName}}</view>
            <view class="shop-info-rating">
              <view
              class="shop-info-rating-stars">★ ★ ★ ★</view>
              <view 
              class="shop-info-rating-sales">月售 {{item.shopSale}}单</view>
            </view>
            <view class="shop-info-price">
              起送 {{item.shopSale}}¥ | 配送 {{item.shopSale}}¥
            </view>
        </view>
        <view class="shop-distribution">
          <view 
          class="shop-distribution-distance">
            {{item.distance}}km
          </view>
          <view 
          class="shop-distribution-time">
            {{item.distance}}分钟
          </view>
        </view>
       </view>
      </navigator>
    </block>
  </view>
</scroll-view>
